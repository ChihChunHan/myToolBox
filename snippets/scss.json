{
	// Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	//// @mixin ////
	"@mixin apply": {
		"prefix": "apply",
		"body": [
			"@include apply(\"$0\");"
		],
		"description": "@mixin apply"
	},
	"@mixin font": {
		"prefix": "font",
		"body": [
			"@include font(${1:size},${2:weight});"
		],
		"description": "@mixin font"
	},
	"@mixin size": {
		"prefix": ["size","z"],
		"body": [
			"@include size(${0:${1:weight},${2:height}});"
		],
		"description": "@mixin size"
	},
	"generate @mixin rwd-sm": {
		"prefix": "sm",
		"body": [
			"@include rwd(sm){",
			"  $0",
			"};"
		],
		"description": "@mixin rwd-sm"
	},
	"generate @mixin rwd-md": {
		"prefix": "md",
		"body": [
			"@include rwd(md){",
			"  $0",
			"};"
		],
		"description": "@mixin rwd-md"
	},
	"generate @mixin rwd-lg": {
		"prefix": "lg",
		"body": [
			"@include rwd(lg){",
			"  $0",
			"};"
		],
		"description": "@mixin rwd-lg"
	},
	"generate @mixin rwd-xl": {
		"prefix": "xl",
		"body": [
			"@include rwd(xl){",
			"  $0",
			"};"
		],
		"description": "@mixin rwd-xl"
	},
	"generate @mixin nthType": {
		"prefix": "nth",
		"body": [
			"@include nth(${1:num}){",
			"  $0",
			"};"
		],
		"description": "@mixin nthType"
	},

	"@mixin margin": {
		"prefix": ["m","margin"],
		"body": ["@include margin(${1|'',x,y,top,left,bottom,right|},${2|auto,1,2,3,4,5|});"],
		"description": "@mixin margin-" 
	},
	"@mixin padding": {
		"prefix": ["p","padding"],
		"body": ["@include padding(${1|'',x,y,top,left,bottom,right|},${2|1,2,3,4,5|});"],
		"description": "@mixin padding-" 
	},

	//// css ////
	"multi-bg-setting": {
		"prefix": "bg-multiple",
		"body": [
			"background-image: url();",
			"background-repeat: no-repeat;",
			"background-size: contain;",
			"background-position: 0 0;"
		],
		"description": "multi-bg-setting"
	},
	"container": {
		"prefix": ".container",
		"body": [
			".container {",
			"  $0",
			"};"
		],
		"description": "container"
	},
	"col-n": {
		"prefix": ".col-n",
		"body": [
			".col-${1:n} {",
			"  $0",
			"};"
		],
		"description": "col-n"
	}
}